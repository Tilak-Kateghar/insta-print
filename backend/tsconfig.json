{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}